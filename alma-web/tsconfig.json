{
    "compilerOptions": {
        "lib": ["es2021", "DOM"],
        "target": "ES5",
        "outDir": "build",
        "strict": true,
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "baseUrl": "../",
        "paths": {
            "@alma-graph/*": ["./alma-graph/src/*"]
        }
    },
    "include": ["./src"]
}
