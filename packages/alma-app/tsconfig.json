{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "lib": ["esnext"],
        "target": "esnext",
        "module": "esnext",
        "outDir": "build",
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src", "./types"]
}
